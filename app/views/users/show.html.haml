- if current_user == @user
  %ul
  %li=link_to 'フォロー', following_user_path(@user)
  %li=link_to 'フォロワー', followers_user_path(@user)
- else
  - if current_user.following?(@user)
    =form_for(current_user.active_relationships.find_by(followed_id: @user.id),
               html: { method: :delete },
               remote: true) do |f|
      = f.submit "Unfollow", class: "btn"
  - else
    = form_for current_user.active_relationships.build do |f|
      = hidden_field_tag :followed_id, @user.id
      = f.submit "Follow", class:"btn btn-primary"

%h1 #{@user.name}さんのマイページ
%h2 よく練習している道具
%p #{@user.material}
%h2 所属しているサークル
%p #{@user.club}
%h2 自己紹介
%p #{@user.text}
%h2 合計キャッチ数
%p #{@catches}

%h1 最近の達成
- @records.each do |record|
  = link_to record_path(record) do
    %div
      %ul
        %li #{record.date}
        %li #{record.number} #{record.category.material} #{record.trick.name}
        %li #{record.catch} キャッチ
        - if record.text.present?
          %li コメント： #{record.text}

%h1 書いた記事
%ul
  - @articles.each do |article|
    %li= link_to article.title, article_path(article)
